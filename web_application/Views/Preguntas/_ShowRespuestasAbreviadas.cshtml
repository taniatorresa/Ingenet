@model IEnumerable<Entities.Respuesta>
<div class="row">
   



                    @foreach (var item in Model)
                    {
                        <div class="col-md-2">

                        </div>
                        <div class="col-md-10">
                            <ul class="media-list">
                                <li class="media">
                                    <a class="pull-left" href="javascript:;">

                                        <img class="todo-userpic" src="@Url.Action("Getknowimage", "Usuario", new { id = item.UsuarioID  })" width="27px" height="27px" />
                                    </a>
                                    <div class="media-body todo-comment">
                                        <button type="button" class="todo-comment-btn btn btn-circle btn-default btn-sm">&nbsp; Comentario &nbsp;</button>
                                        <p class="todo-comment-head">
                                            <span class="todo-comment-username">@Html.Action("Getusuario", new { id = item.UsuarioID })</span> &nbsp;
                                            @{

                                                String newfecha = "";
                                                int c = 0;
                                                String value = (item.Creada).ToString();
                                                Char delimiter = ' ';
                                                String[] substrings = value.Split(delimiter);
                                                foreach (var substring in substrings)
                                                {
                                                    if (c == 0)
                                                    {
                                                        newfecha = substring;
                                                    }
                                                    c++;

                                                }

                                            }
                                            <span class="todo-comment-date">@newfecha</span>
                                        </p>
                                        <p class="todo-text-color">
                                            @Html.DisplayFor(modelItem => item.ContenidoRespuesta)
                                        </p>
                                    </div>
                                </li>

                            </ul>
                        </div>
                        @*<td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.RespuestaID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.RespuestaID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.RespuestaID })
                            </td>*@

                    }

                </div>
          

