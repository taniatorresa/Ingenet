                            <label class="btn btn-transparent dark btn-outline btn-circle btn-sm">
                                <input type="radio" name="options" class="toggle" id="option2">Settings
                            </label>
                        </div>
                    </div>*@
            </div>
            <div class="portlet-body">
                <!-- BEGIN FORM-->
                @using (Html.BeginForm("Create", "Temas", null, FormMethod.Post, new { id = "form_sample_3", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    @*<form action="#" id="form_sample_3" class="form-horizontal">*@
                    <div class="form-body">
                        <div class="alert alert-danger display-hide">
                            <button class="close" data-close="alert"></button> Parece que tienes problemas, revisa los campos.
                        </div>
                        <div class="alert alert-success display-hide">
                            <button class="close" data-close="alert"></button> Formulario exitoso
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.NombreTema, htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.NombreTema, new { htmlAttributes = new { @class = "form-control", required = "required", name = "name" } })
                                @Html.ValidationMessageFor(model => model.NombreTema, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-offset-3 col-md-9">
                                    <button class="btn green-sharp btn-circle" data-toggle="confirmation" data-popout="true">Crear tema</button>
                                </div>
                            </div>
                        </div>
                    </div>
                            }
            </div>
        </div>
    </div>
</div>

